/**
 * Implements hook_init()
 */
function regiomino_geolocation_init() {

	global $base_url;
			
	$params = drupal_get_query_parameters();
	if(isset($params['resetloc']) && $params['resetloc'] == '1') {
		unset($_SESSION['geolocation_data']);
		regiomino_cart_delete_cart();

		$tmp1 = explode('//', $base_url);
		$tmp2 = explode('.', $tmp1[1]);
		$current_path = current_path();
		
		$newurlstring = $tmp1[0] . '//' . $tmp2[1];
		if(isset($tmp2[2])) $newurlstring .= '.' . $tmp2[2];
		//if(isset($current_path)) $newurlstring .= '/' . $current_path;
		
		drupal_goto($newurlstring, array('external' => TRUE));
	}

	if(isset($_SESSION['geolocation_data']['deliveryoption'])) {
		$deliveryoption = explode('-', $_SESSION['geolocation_data']['deliveryoption']);
		$deadline = strtotime(date('d.m.Y', $deliveryoption[1]));
		$time = time();
		if($deadline < $time) {
			unset($_SESSION['geolocation_data']);
			regiomino_cart_delete_cart();	
			drupal_goto(current_path());
		}
	}
	
	$tmp1 = explode('//', $base_url);
	$tmp2 = explode('.', $tmp1[1]);


	if(!isset($_SESSION['geolocation_data'])) {
		if(isset($tmp2[1]) && !empty($tmp2[0]) && $tmp2[0] != 'www') {	
			regiomino_geolocation_detect_by_subdomain($tmp2[0]);
		}
	}
	
	global $user;
	$return = FALSE;
	if($user->uid > 0) {
		$account = user_load($user->uid);
		in_array('Gewerbekunde', $account->roles) ? $return = TRUE : $return = FALSE;
		if(regiomino_admin_user_is_admin()) $return = TRUE;
	}
	
 	if(isset($tmp2[1]) && !empty($tmp2[0]) && $tmp2[0] != 'www') {
		if(!$return) {
			$query = new EntityFieldQuery;
			$tmp = $query
				->entityCondition('entity_type', 'field_collection_item')
				->fieldCondition('field_metro_key', 'value', $tmp2[0])
				->execute();
			$alltmpvalues = array_values($tmp['field_collection_item']);
			$fci = field_collection_item_load($alltmpvalues[0]->item_id);
			$currentpath = current_path();
			if(
				isset($fci->field_commercial_only[LANGUAGE_NONE][0]['value'])
				&& $fci->field_commercial_only[LANGUAGE_NONE][0]['value'] == 1
				&& $currentpath != 'user'
				&& $currentpath != 'user/edit'
				&& $currentpath != 'user/login'
				&& $currentpath != 'user/register'
				&& $currentpath != 'allparticipants'
				&& $currentpath != 'node/2'
				&& $currentpath != 'node/1129'
				&& $currentpath != 'node/1188'
				&& $currentpath != 'node/47201'
				&& $currentpath != 'faq'
				&& $currentpath != 'node/47202'
				&& $currentpath != 'node/1174'
				&& $currentpath != 'node/1130'
				&& $currentpath != 'node/1193'
				&& $currentpath != 'node/1170'
				&& $currentpath != 'node/97'
				&& $currentpath != 'node/11941'
				&& $currentpath != 'node/889'
				&& $currentpath != 'node/add/commercial-profile'
				&& $currentpath != 'node/add/shipper-profile'
				&& $currentpath != 'node/add/seller-profile'
				&& $currentpath != 'node/add/coop-profile'
			) {
				if($user->uid > 0) {
					module_invoke_all('user_logout', $user);
					// Destroy the current session, and reset $user to the anonymous user.
					session_destroy();
				}
				drupal_set_message('Bitte melden Sie sich als Gewerbekunde an oder registrieren Sie ein Gewerbekundenprofil um Produkte aus diesem Gebiet beziehen zu können', 'warning');
				drupal_goto('user/register', array('query' => drupal_get_destination()));
			}
		}
	}

	theme('regiomino_geolocation_javascript');
}

function regiomino_geolocation_detect_by_subdomain($metro_key) {
	$query = new EntityFieldQuery;
	$tmp = $query
		->entityCondition('entity_type', 'field_collection_item')
		->fieldCondition('field_metro_key', 'value', $metro_key)
		->execute();
	$alltmpvalues = array_values($tmp['field_collection_item']);
	$fci = field_collection_item_load($alltmpvalues[0]->item_id);
	$regiomino_geodb_avlbregions = variable_get('regiomino_geodb_avlbregions');
	$myzipkey = '';
	foreach($regiomino_geodb_avlbregions as $zipkey => $somevalue) {
		if(strpos($zipkey, $fci->field_delivery_areas[LANGUAGE_NONE][0]['value']) !== FALSE) {
			$myzipkey = $zipkey;
			break;
		}
	}
	$options_dates = regiomino_shipping_get_regional_deliveryoptions($myzipkey, 1);
	$deliveryoption = array_keys($options_dates);
	
	$_SESSION['geolocation_data'] = array(
		'zipcode' => $fci->field_delivery_areas[LANGUAGE_NONE][0]['value'],
		'locality' => $regiomino_geodb_avlbregions[$myzipkey][0]['name'],
		'latitude' => $regiomino_geodb_avlbregions[$myzipkey][0]['lat'],
		'longitude' => $regiomino_geodb_avlbregions[$myzipkey][0]['lon'],
		'type' => 'bringlivery',
		'deliveryoption' => $deliveryoption[0],
		'metro_key' => $metro_key, 
		'metro_name' => $fci->field_metro_name[LANGUAGE_NONE][0]['value'], 
		'customertype' => 'private', 
		'pricefieldtype' => 'field_tu_gross', 
	);
	global $user;
	if($user->uid > 0) {
		$userobject = user_load($user->uid);
		if(in_array('Gewerbekunde', $userobject->roles)) {
			$_SESSION['geolocation_data']['customertype'] = 'commercial';
			$_SESSION['geolocation_data']['pricefieldtype'] = 'field_tu_price';
		}
	}
}

