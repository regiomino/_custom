																//'regiomino_geodb_avlbregions' => variable_get('regiomino_geodb_avlbregions'),
																//'regiomino_geodb_avlbpoints' => variable_get('regiomino_geodb_avlbpoints'),
															),
														)); 
				
			}
			return $block;

		case 'regiomino_geolocation_request':
		
			if(user_access('access content')){
				
				$loadedcart = regiomino_cart_load_cart();
				$cartfilled = FALSE;
				if(!empty($loadedcart)) $cartfilled = TRUE;
				
					$templatearray = array(
						'vars' => array(
							'resetpath' => url(current_path(), array('query' => array('resetloc' => '1'))),
							'cartfilled' => $cartfilled,
						),
					);
					
					if(isset($_SESSION['geolocation_data']) && ! empty($_SESSION['geolocation_data'])) {
						$deliveryoption = explode('-', $_SESSION['geolocation_data']['deliveryoption']);
						$templatearray['vars']['geoloc_zip'] = $_SESSION['geolocation_data']['zipcode'];
						$templatearray['vars']['geoloc_loc'] = $_SESSION['geolocation_data']['locality'];
						$templatearray['vars']['geoloc_type'] = $_SESSION['geolocation_data']['type'];
						$templatearray['vars']['geoloc_option'] = $_SESSION['geolocation_data']['deliveryoption'];
						$templatearray['vars']['timewindow'] = t(date('l', $deliveryoption[1])) . ', ' . date('d.m.Y', $deliveryoption[1]);
					}
					
					$block['content'] = theme('regiomino_geolocation_theme_display', $templatearray);
				
			}
			return $block;  
	}
}

function regiomino_geolocation_region_entry($form, &$form_state) {	

	// $avlbregions = variable_get('regiomino_geodb_avlbregions');

	// $options_zipcodes = array();
	// foreach($avlbregions as $zip => $more) {
		// foreach($more as $key=>$value) {
			// if(!isset($options_zipcodes[$zip])) $options_zipcodes[$zip] = $zip . ' ' . $value['name'];
		// }
	// }
	
	$query = new EntityFieldQuery();
	$tmp = $query
			->entityCondition('entity_type', 'node')
			->entityCondition('bundle', 'shipper_profile')
			->propertyCondition('status', 1)
			->execute();
	$shipperprofiles = entity_load('node', array_keys($tmp['node']));
	
	$allfcis = array();
	foreach($shipperprofiles as $nid => $nodeobject) {
		foreach($nodeobject->field_delivery_options[LANGUAGE_NONE] as $index => $value) {
			$allfcis[$value['value']] = TRUE;
		}
	}
	
	$field_collection_items = entity_load('field_collection_item', array_keys($allfcis));

	foreach($field_collection_items as $fcid => $fcvalue) {
		$options_zipcodes[$fcvalue->field_delivery_areas[LANGUAGE_NONE][0]['value']] = $fcvalue->field_metro_name[LANGUAGE_NONE][0]['value'];
		if(isset($fcvalue->field_commercial_only[LANGUAGE_NONE][0]['value']) && $fcvalue->field_commercial_only[LANGUAGE_NONE][0]['value'] == 1) {
			$options_zipcodes[$fcvalue->field_delivery_areas[LANGUAGE_NONE][0]['value']] .= ' (derzeit nur für Gewerbekunden)';
		}
	}
	
	
	$form['regiomino_geolocation_region']['zipcode'] = array(
		'#type' => 'select',
		'#size' => 1,
		'#default_value' => '96052',
		'#options' => $options_zipcodes,
	);

	$form['regiomino_geolocation_region']['submit-zipcode'] = array(
		'#type' => 'submit',
		'#value' => t('Einkauf starten!'),
	);
	return $form;
}

function regiomino_geolocation_region_entry_submit($form, &$form_state) {

	$zipfragments = array();
	for($i=1; $i<=strlen($form_state['values']['zipcode']); $i++) {
		$zipfragments[] = substr($form_state['values']['zipcode'], 0, $i);
	}
	
	$query = new EntityFieldQuery;
	$tmp = $query
		->entityCondition('entity_type', 'node')
		->entityCondition('bundle', 'shipper_profile')
		->propertyCondition('status', 1)
		->execute();
		
	$allshippers = entity_load('node', array_keys($tmp['node']));

	$metro_key = '';
	
	foreach($allshippers as $nid => $nodeobject) {
		$allfcis = entity_load('field_collection_item', $nodeobject->field_delivery_options[LANGUAGE_NONE]);
		foreach($allfcis as $fcid => $fcinfo) {
			foreach($fcinfo->field_delivery_areas[LANGUAGE_NONE] as $fcdainfo) {
				if(in_array($fcdainfo['value'], $zipfragments)) $metro_key = $fcinfo->field_metro_key[LANGUAGE_NONE][0]['value'];
				if($metro_key) break;
			}
			if($metro_key) break;
		}
		if($metro_key) break;
	}
	global $base_url;
	$tmp1 = explode('//', $base_url);
	$tmp2 = explode('.', $tmp1[1]);
	$current_path = current_path();
	$newurlstring = $tmp1[0] . '//';
	if($metro_key) $newurlstring .= $metro_key . '.';
	if($tmp2[1]) {
		$newurlstring .= $tmp2[1];
	}
	else {
		$newurlstring .= $tmp2[0];
	}
	if(isset($tmp2[2])) $newurlstring .= '.' . $tmp2[2];
	if(isset($current_path)) $newurlstring .= '/' . $current_path;
	drupal_goto($newurlstring, array('external' => TRUE));
}

